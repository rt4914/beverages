<div class="card">
  <h5 class="card-header">Sign Up</h5>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <% f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mt-4", placeholder:"Email" %>
      </div>

      <div class="field">
        <% f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control mt-2", placeholder:"New password (#{@minimum_password_length} characters minimum)" %>
      </div>

      <div class="field">
        <% f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control mt-2", placeholder:"Re-type password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:"btn btn-primary mt-4" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
